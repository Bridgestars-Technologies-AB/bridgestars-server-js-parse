{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "./build",                          
    "strict": true,      
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts"
  ]
}